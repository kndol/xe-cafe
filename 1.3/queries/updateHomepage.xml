<query id="updateHomepage" action="update">
    <tables>
        <table name="homepages" />
    </tables>
    <columns>
        <column name="title" var="title" />
        <column name="description" var="description" />
        <column name="layout_srl" var="layout_srl" filter="number" />
        <column name="mlayout_srl" var="mlayout_srl" filter="number" />
    </columns>
    <conditions>
        <condition operation="equal" column="site_srl" var="site_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
